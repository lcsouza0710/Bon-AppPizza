<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Bon App Pizza</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='//fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900,200italic,300italic,400italic,600italic,700italic,900italic' rel='stylesheet' type='text/css'>
    <link href='//fonts.googleapis.com/css?family=Lobster+Two:400,400italic,700,700italic' rel='stylesheet' type='text/css'>
    <!--Animation-->
    <script src="/js/wow.min.js"></script>
    <link href="/css/animate.css" rel='stylesheet' type='text/css' />

    <script>
        new WOW().init();
    </script>
    <script type="text/javascript" src="js/move-top.js"></script>
    <script type="text/javascript" src="js/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1200);
            });
        });
    </script>
    <script src="js/simpleCart.min.js"></script>
    

    <!--<script src="~/Scripts/modernizr-2.6.2.js"></script>-->
</head>
<body>
    <!-- header-section-starts -->
    <div class="header">
        <div class="container">
            <div class="top-header">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")">
                        <img src="/images/logo.png" class="img-responsive" alt="" />

                </div>
                <!-- <div class="queries">
         <p>Questions? Call us Toll-free!<span>1800-0000-7777 </span><label>(11AM to 11PM)</label></p>
     </div>-->
                <div class="header-right">
                    <div class="cart box_1">
                        <a href="checkout.html">
                            <h3> <span class="simpleCart_total"> $0.00 </span> (<span id="simpleCart_quantity" class="simpleCart_quantity"> 0 </span> items)<img src="images/bag.png" alt=""></h3>
                        </a>
                        <p><a href="javascript:;" class="simpleCart_empty">Empty card</a></p>
                        <div class="clearfix"> </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
        <div class="menu-bar">
            <div class="container">
                <div class="top-menu">
                    <ul>
                        <!--<li><a href="index.html">Home</a></li>|-->
                        <!--<li class="active">@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, null)</li>-->
                        <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, null)
                        <li>@Html.ActionLink("Pizzarias", "Pizzarias", "Home", new { area = "" }, null)</li>
                        <!--<li><a href="order.html">Order</a></li>|-->
                        <li>@Html.ActionLink("Fale Conosco", "Contact", "Home", new { area = "" }, null)</li>


                    </ul>
                </div>
                <div class="login-section">
                    <ul>
                        <li><a href="login.html">Login</a>  </li> |
                        <li><a href="register.html">Inscreva-se</a> </li> |
                        <li><a href="#">Ajuda</a></li>
                        
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>

    </div>

    <!--@RenderBody()--> <!--ESTA ESPERANDO O CORPO DO HTML-->
    <!-- <div class="container body-content">-->

    <hr />
    <div class="contact-section" id="contact">
        <div class="container">
            <div class="contact-section-grids">
                <div class="col-md-3 contact-section-grid wow fadeInLeft" data-wow-delay="0.4s">
                    <h4>Links</h4>
                    <ul>
                        <li><i class="point"></i></li>
                        <li class="data"><a href="#">Sobre Bonn App Pizza</a></li>
                    </ul>
                    <ul>
                        <li><i class="point"></i></li>
                        <li class="data"><a href="#">Fale Conosco</a></li>
                    </ul>
                    <ul>
                        <li><i class="point"></i></li>
                        <li class="data"><a href="#">Politica e Privacidade</a></li>
                    </ul>
                    <ul>
                        <li><i class="point"></i></li>
                        <li class="data"><a href="#">Termos de uso</a></li>
                    </ul>
                </div>

                <div class="col-md-3 contact-section-grid wow fadeInRight" data-wow-delay="0.4s">
                    <h4>Siga-nos nas redes sociais!</h4>
                    <ul>
                        <li><i class="fb"></i></li>
                        <li class="data"> <a href="#">  Facebook</a></li>
                    </ul>
                    <ul>
                        <li><i class="tw"></i></li>
                        <li class="data"> <a href="#">Twitter</a></li>
                    </ul>
                    <ul>
                        <li><i class="in"></i></li>
                        <li class="data"><a href="#"> Linkedin</a></li>
                    </ul>
                    <ul>
                        <li><i class="gp"></i></li>
                        <li class="data"><a href="#">Google Plus</a></li>
                    </ul>
                </div>
                <div class="col-md-3 contact-section-grid nth-grid wow fadeInRight" data-wow-delay="0.4s">
                    <h4>Receber nossas notícias</h4>
                    <p>Novos restaurantes e opções de cardápio são atualizadas toda semana</p>
                    <input type="text" class="text" value="" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}">
                    <input type="submit" value="Inscreva-se">
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>

    <div class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Bonn App Pizza</p>
        </div>
    </div>

    <!-- footer-section-ends -->
